<h1>New Camper Form</h1>

<% if flash[:my_errors] %>
<ul>
    <% flash[:my_errors].each do |error| %>
    <li><%= error %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @camper do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br><br>
    <%= f.label :age %>
    <%= f.number_field :age %>
    <%= f.submit %>
<% end %>